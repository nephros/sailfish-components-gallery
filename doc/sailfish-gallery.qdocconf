outputformats = HTML
outputdir = $$PWD/html
base = file:$$PWD/html
tagfile = $$PWD/html/sailfish-gallery.tags

qhp.projects = SailfishGallery
qhp.SailfishGallery.file = sailfish-gallery.qhp
qhp.SailfishGallery.namespace = org.sailfishos.gallery.0.0.1
